@model List<CISS411_Project.Models.Enrollment>
<h2>Enter Student Progress Reports</h2>
<h3>Session: @Model[0].Session.Lesson.SkillLevel</h3>
<form asp-controller="Coach" asp-action="PostReport" method="post">
    <table border="1">
        <tr>
            <th></th>
            <th>Student ID</th>
            <th>Grade</th>
        </tr>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td><input asp-for="@Model[i].EnrollmentId" type="hidden" value="@Model[i].EnrollmentId" />
                </td>
                <td>@Model[i].SwimmerId</td>
                <td><input asp-for="@Model[i].ProgressReport" /></td>
            </tr>
        }
    </table>
    <input type="submit" value="Submit" />
</form>