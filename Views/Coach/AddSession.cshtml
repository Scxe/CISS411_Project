@model CISS411_Project.Models.Session
<div>
    <h2>Add Your Session</h2>
    <form asp-controller="Coach" asp-action="AddSession" method="post">
        <input asp-for="CoachId" type="hidden" />
        <input asp-for="LessonId" type="hidden" />
        <table class="table">
            <tr>
                <th>Start Date: </th>
                <td><input asp-for="StartDate" /></td>
            </tr>
            <tr>
                <th>End Date: </th>
                <td><input asp-for="EndDate" /></td>
            </tr>
            <tr>
                <th scope="row">Seats Available: </th>
                <td><input asp-for="SeatsAvailable" /></td>
            </tr>
            <tr>
                <th scope="row">Start Time: </th>
                <td><input asp-for="StartTime" /></td>
            </tr>
        </table>
        <button type="submit">Add Session</button>
    </form>
    <br />
    <p><a asp-action="AllLesson">Back to All Lessons</a></p>
</div>