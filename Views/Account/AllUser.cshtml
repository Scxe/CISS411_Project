@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
<div>
    <p><a asp-action="Register">Add a user</a></p>
    @{
        if (Model.Count() < 1)
        {
            <p>No user in database yet.</p>
        }
        else
        {
            <h3>All Users</h3>
            <table class="table">
                <tr>
                    <th scope="col">User Name</th>
                    <th scope="col">Add Role</th>
                </tr>
                @foreach (var user in Model)
                {
                    <tr>
                        <td scope="row">@user.UserName</td>
                        <td><a asp-controller="Role" asp-action="AddUserRole" asp-route-id="@user.Id">Add a role</a></td>
                    </tr>
                }
            </table>
        }
    }
    <br />
    <p><a asp-controller="Admin" asp-action="Index">Back to Admin Home</a></p>
</div>